---
import '@/style/global.css';
import Layout from '@/Layouts/Layout.astro';

export const dynamicColor = 'rgb(151,233,242)';
---

<Layout>
  <h1 class="">Homepage</h1>

  <div>
    <a href="/blog">Go to blog!</a>
  </div>
</Layout>

<style>
  h1 {
    margin-top: 20px;
    font-size: 2rem;
    font-weight: bold;
  }

  div {
    display: flex;
    align-items: center;
  }

  div a {
    padding: 10px 20px;
    background-color: rgb(126, 174, 230);
    border-radius: 20px;
    color: white;
    font-weight: bold;
    margin-top: 20px;
    transition: all 0.3s ease-in-out;
  }

  div a:hover {
    background-color: rgb(177, 208, 243);
    cursor: pointer;
  }
</style>
